{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es5",
            "es2015"
        ],
        "allowSyntheticDefaultImports": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "target": "es5",
        "sourceMap": true,
        "outDir": "./dist",
        "declaration": true,
        "removeComments": false,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
